<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="userDashboard" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tawelib.UserDashboardController">
   <left>
      <VBox fx:id="librarianControls" prefHeight="200.0" prefWidth="210.0" style="-fx-background-color: #FF9626;" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="75.0" prefWidth="210.0" VBox.vgrow="ALWAYS" />
            <ImageView fx:id="avatar_img" fitHeight="120.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/Tawe-LibLogo0.png" />
               </image>
               <viewport>
                  <Rectangle2D minX="20.0" />
               </viewport>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="myAccountButton" mnemonicParsing="false" onMouseClicked="#myAccount" prefHeight="25.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: #000;" text="My Account" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="resourcesButton" mnemonicParsing="false" onMouseClicked="#searchResource" prefHeight="25.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: #000;" text="Search Resources">
               <padding>
                  <Insets bottom="5.0" top="10.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="addNewResourcesButton" mnemonicParsing="false" onMouseClicked="#viewResources" prefHeight="25.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: #000;" text="View Borrowed">
               <padding>
                  <Insets bottom="5.0" top="10.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="searchMembersButton" mnemonicParsing="false" onMouseClicked="#viewRequested" prefHeight="25.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: #000;" text="View Requested">
               <padding>
                  <Insets bottom="5.0" top="10.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="logOutButton" mnemonicParsing="false" onMouseClicked="#loginPage" prefHeight="25.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Log Out" textFill="#9a9a9a">
               <padding>
                  <Insets bottom="5.0" top="50.0" />
               </padding>
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
            <Region prefHeight="75.0" prefWidth="210.0" VBox.vgrow="ALWAYS" />
         </children>
         <effect>
            <DropShadow height="14.25" radius="6.0625" width="12.0" />
         </effect>
      </VBox>
   </left>
</BorderPane>
