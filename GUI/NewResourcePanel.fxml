<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="newResourcePanel" prefHeight="500.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.NewResourcePanelController">
   <left>
      <VBox prefHeight="500.0" prefWidth="70.0" style="-fx-background-color: #C1C1C1;" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="button_book" mnemonicParsing="false" onMouseClicked="#addNewBook" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent;" text="Book" textFill="WHITE">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="button_DVD" mnemonicParsing="false" onMouseClicked="#addNewDVD" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent;" text="DVD" textFill="WHITE" />
            <Button fx:id="button_laptop" mnemonicParsing="false" onMouseClicked="#addNewLaptop" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent;" text="Laptop" textFill="WHITE" />
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
         <effect>
            <DropShadow />
         </effect>
      </VBox>
   </left>
</BorderPane>
