<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tawelib.AvatarController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Save" onAction="#save"/>
                    <MenuItem text="Exit" onAction="#exit"/>
                </Menu>
            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Brush size:"/>
                    <TextField fx:id = "brushSize" text="10"/>
                    <ColorPicker fx:id = "colourPicker"/>
                    <MenuBar>
                        <Menu text="Tool">
                            <MenuItem text="Eraser" onAction="#eraser"/>
                            <MenuItem text="Particle trace" onAction="#particleTrace"/>
                            <MenuItem text="Line" onAction="#line"/>
                        </Menu>
                    </MenuBar>
                    <Label text="Selected tool:"/>
                    <Text fx:id = "selectedTool" text="None"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id = "canvas" width = "800" height = "600"/>
    </center>

</BorderPane>
